<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.cn.teacherfragment.teacherfragment.StudentRoughlySonActivity">

    <cn.mywidget.www.www.BackActionbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/activity_student_roughly_son_textview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:maxLength="20"
        android:singleLine="true" />

    <ListView
        android:id="@+id/activity_student_roughly_son_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
